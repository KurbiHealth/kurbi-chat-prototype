<div style="margin-top:0px;position:relative;">

<style type="text/css">
	.kurbi-hnmk-grandparent {
		display:-webkit-flex;
		display: flex;
		-webkit-flex-wrap:nowrap;
		flex-wrap:nowrap;
		-webkit-flex-direction:row;
		flex-direction:row;
		-webkit-justify-content:flex-start;
		justify-content:flex-start;
		-webkit-align-items:stretch;
		align-items:stretch;
		width:100%;
	}
	.kurbi-hnmk-img-container {
		margin-right:5px;
		display: inline-block;
	}
	.kurbi-hnmk-displayName {
		display: inline-block;
		font-size:14px;
		font-weight:bold;
		line-height: 40px;
		color:#000000;
	}
	.kurbi-hnmk-body {
		margin-top: 10px;
	}
	.kurbi-hnmk-text {
		font-size: 15px;
		color:#222222;
		font-weight:lighter;
		white-space:pre-wrap;
		line-height: 1.6;
	}

</style>

<div class="kurbi-hnmk-grandparent">
	<div class="kurbi-hnmk-parent">
		<div class="kurbi-hnmk-img-container">
			<img class="kurbi-hnmk-img" src="{{image}}" width="40" height="40" alt="{{displayName}}" />
		</div><!-- /.kurbi-hnmk-img-container -->
		<div class="kurbi-hnmk-displayName">{{displayName}}</div>
		<div class="kurbi-hnmk-body">
			<div class="kurbi-hnmk-text">{{text}}</div>
		</div><!-- /.kurbi-hnmk-body -->
	</div><!-- /.kurbi-hnmk-parent -->
</div><!-- /.kurbi-hnmk-grandparent -->
