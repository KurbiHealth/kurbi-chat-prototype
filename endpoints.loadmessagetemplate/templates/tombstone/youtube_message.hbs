{{#if self}}

	<div style="padding:40px 20px 0 20px;display:block;">

	<style type="text/css">
		.kurbi-aspcmg-image {
			width: auto;
			height:60px;
		}
		.embed-container { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 100%; }
		.embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
	</style>

		<div class='embed-container'><iframe src="{{video}}" frameborder='0' allowfullscreen></iframe></div>

	</div>


{{else}}

	<div style="padding:40px 20px 0 20px;display:block;">

		<style type="text/css">
			.kurbi-ytbevmg-displayName {
				font-weight:bold;
				font-size: 13px;
				margin-bottom:10px;
				color:#444444;
			}
			.kurbi-ytbevmg-source {
				margin-bottom: 8px;
		    padding: 10px 0;
		    color: #ffffff;
		    font-weight: bold;
		    font-size: 14px;
		    max-width: 100px;
		    text-align: center;
		    background: #08427a;
			}
			.kurbi-ytbevmg-text{
				margin-bottom: 10px;
				font-size:15px;
				line-height: 1.6;
				color: #222222;
			}
			.kurbi-ytbevmg-image {
				width:100%;
				height:auto;

			}
			.embed-container { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 100%; }
			.embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }
		</style>
		<div class="kurbi-ytbevmg-displayName">{{displayName}}</div>
		<div class="kurbi-ytbevmg-source">{{source}}</div>
		<div class="kurbi-ytbevmg-text">{{text}}</div>
		<div class='embed-container'><iframe src="{{video}}" frameborder='0' allowfullscreen></iframe></div>

	</div>

{{/if}}
