{{#if self}}

	<div style="padding:40px 20px 0 20px;display:block;">

	<style type="text/css">
		.kurbi-aspcmg-image {
			width: auto;
			height:60px;
		}
	</style>

		<img class="kurbi-aspcmg-image" src="{{img}}"/>

	</div>


{{else}}

	<div style="padding:40px 0 0 0;display:block;">

		<style type="text/css">
			.kurbi-spcmg-bkgd {
				margin-bottom: 80px;
				padding: 20px 20px 0 20px;
			}
			.kurbi-spcmg-displayName {
				padding: 0 20px;
				font-weight:bold;
				font-size: 13px;
				margin-bottom:10px;
				color:#444444;
			}
			.kurbi-spcmg-source a, .kurbi-spcmg-source a:visited {
				margin-bottom: 10px;
			    display: block;
			    font-size: 14px;
			    color: #000000;
			    font-weight: bold;
			    text-decoration: underline;
			}
			.kurbi-spcmg-source a:hover {
				color: #000000;
				text-decoration: none;
			}
			.kurbi-spcmg-text{
				padding: 0 20px;
				margin-bottom: 10px;
				font-size:15px;
				line-height: 1.6;
				color: #222222;
			}
			.kurbi-spcmg-image {
				margin-bottom: -60px;
				width:100%;
				height:auto;
				-webkit-box-shadow: 0px 1px 3px 0px rgba(0,0,0,.1);
  				-moz-box-shadow: 0px 1px 3px 0px rgba(0,0,0,.1);
  				box-shadow: 0px 1px 3px 0px rgba(0,0,0,.1);

			}
		</style>
		<div class="kurbi-spcmg-displayName">{{displayName}}</div>
		<div class="kurbi-spcmg-bkgd" style="background: {{color}}">
			<div class="kurbi-spcmg-source"><a href="{{source}}">Read this story</a></div>
			<img class="kurbi-spcmg-image" src="{{img}}"/>
		</div>
		<div class="kurbi-spcmg-text">{{text}}</div>


	</div>

{{/if}}
