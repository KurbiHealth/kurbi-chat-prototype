{{#if self}}

	<div style="padding:40px 20px 0 20px;display:block;">

	<style type="text/css">
		.kurbi-aspcmg-image {
			width: auto;
			height:60px;
		}
	</style>

		<img class="kurbi-aspcmg-image" src="{{img}}"/>

	</div>


{{else}}

	<div style="padding:40px 20px 0 20px;display:block;">

		<style type="text/css">
			.kurbi-spcmg-displayName {
				font-weight:bold;
				font-size: 13px;
				margin-bottom:10px;
				color:#444444;
			}
			.kurbi-spcmg-source {
				margin-bottom: 8px;
			    padding: 10px 0;
			    color: #ffffff;
			    font-weight: bold;
			    font-size: 14px;
			    max-width: 100px;
			    text-align: center;
			    background: #387e29;
			}
			.kurbi-spcmg-text{
				margin-bottom: 10px;
				font-size:15px;
				line-height: 1.6;
				color: #19110E;
			}
			.kurbi-spcmg-image {
				width:100%;
				height:auto;

			}
		</style>
		<div class="kurbi-spcmg-displayName">{{displayName}}</div>
		<div class="kurbi-spcmg-source">{{source}}</div>
		<div class="kurbi-spcmg-text">{{text}}</div>
		<img class="kurbi-spcmg-image" src="{{img}}"/>

	</div>

{{/if}}
