<div>
<style type="text/css">
.kurbi-kkrm-prompt{
	font-size:1.3em;
	color:#444444;
	margin-bottom:10px;
}
.kurbi-kkrm-input {
	padding: 5px;
	max-width: 100%;
	width:100%;
	height:100px;
	font-size:14px;
	color:#19110E;
	border:none;
}
.kurbi-kkrm-input:focus {
	outline: #4eba3a solid thin;
}
.kurbi-kkrm-parent {
	display:-webkit-flex;
	display:flex;
	-webkit-flex-direction:row;
	flex-direction:row;
	-webkit-justify-content:center;
	justify-content:center;
	-webkit-align-items:center;
	align-items:center;
	-webkit-flex-wrap:wrap;
	flex-wrap:wrap;
	width:100%;
}
.kurbi-kkrm-child {
	margin: 10px auto 0 auto;
	padding: 8px 10px;
	width: 90%;
	font-size: 14px;
	color: #ffffff;
	background-color: #4eba3a;
	text-align: center;
	cursor:pointer;
}
.kurbi-kkrm-icon {
	height:45px;
	width:auto;
	margin-right:8px;
	margin-top:7px;
	margin-bottom:8px;
}
</style>

	<img src="#SMALL_IMAGE_URL" onload="
	var input = this.parentNode.getElementsByClassName('kurbi-kkrm-input')[0];
	kurbi.attachClickHandler['#pickle']('kkrm', function(data, chatbox){
		data.body.text = input.value;
		chatbox.sendMessage(data);
	});
	this.parentNode.removeChild(this);
	"/>

	<div>
		<div class='kurbi-kkrm-prompt'>{{responses.prompt}}</div>
		<textarea class='kurbi-kkrm-input' placeholder="Click here to start typing"></textarea>
		<div class='kurbi-kkrm-parent'>
	 		<div class='kurbi-kkrm-child' onclick="kurbi.click['#pickle']('kkrm', {{json responses.message}})">{{responses.buttonText}}</div><!-- /.kurbi-kkrm-child -->
	 		{{!-- <img class="kurbi-kkrm-icon" src="#SMALL_IMAGE_URL" onload="this.onload=null; this.src=kurbi.getPatientIcon();"/> --}}
		</div><!-- /.kurbi-kkrm-parent -->
	</div>
</div>
